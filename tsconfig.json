{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "esnext",
    "outDir": "./bin",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "allowJs": true
  },
  "files": [
    "src/main.mts",
    "src/client.mts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "bin", "src/@types/*.ts"]
}
