{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "moduleResolution": "Node",
    "allowJs": true
  },
  "files": [
    "src/main.cts",
    "src/client.cts"
  ],
  "exclude": ["node_modules", "**/*.test.ts", "lib", "src/@types/*.ts"]
}
